<h1>Listing users</h1>

<table>
  <tr>
    <th>Login</th>
    <th>Email</th>
    <th>Crypted password</th>
    <th>Password salt</th>
    <th>Persistence token</th>
    <th>Perishable token</th>
    <th>Is admin</th>
    <th>Is provider</th>
    <th>Is patient</th>
    <th>Accepted tos</th>
    <th>Activation code</th>
    <th>Wants newsletter</th>
    <th>Is active</th>
    <th>Is blocked</th>
    <th>Notes</th>
    <th>Phone1</th>
    <th>Phone2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.login %></td>
    <td><%= user.email %></td>
    <td><%= user.crypted_password %></td>
    <td><%= user.password_salt %></td>
    <td><%= user.persistence_token %></td>
    <td><%= user.perishable_token %></td>
    <td><%= user.is_admin %></td>
    <td><%= user.is_provider %></td>
    <td><%= user.is_patient %></td>
    <td><%= user.accepted_tos %></td>
    <td><%= user.activation_code %></td>
    <td><%= user.wants_newsletter %></td>
    <td><%= user.is_active %></td>
    <td><%= user.is_blocked %></td>
    <td><%= user.notes %></td>
    <td><%= user.phone1 %></td>
    <td><%= user.phone2 %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

